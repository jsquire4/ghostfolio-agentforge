{
  "name": "agent",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/agent/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/agent"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        },
        "production": {
          "args": ["--node-env=production"]
        }
      },
      "outputs": ["{workspaceRoot}/dist/apps/agent"]
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "agent:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "agent:build:development"
        },
        "production": {
          "buildTarget": "agent:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/agent/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/agent/jest.config.ts"
      },
      "outputs": ["{workspaceRoot}/coverage/apps/agent"]
    },
    "test:evals": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node evals/run-evals.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "test:eval-coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node evals/check-coverage.ts",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": []
}
